#include <stdio.h>
#include <string.h>
#include <stdlib.h>

typedef struct{
        int matricula;
        char nome[12];
        float cr;
    } Aluno;

int main(void){
    
    Aluno *ptraluno = (Aluno *)malloc(sizeof(Aluno));
    
    printf("Digite a Matricula\n");
    scanf("%d",&ptraluno->matricula);
    printf("\nDigite a Nome\n");
    scanf("%s",&ptraluno->nome);
    printf("\nDigite a Cr\n");
    scanf("%f",&ptraluno->cr);



    printf("\nMatricula: \n%d",ptraluno->matricula);
    printf("\nNome: %s\n",ptraluno->nome);
    printf("\nCr: %2.f\n",ptraluno->cr);
    
    

}
